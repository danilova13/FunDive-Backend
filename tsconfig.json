{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",                                                    
    "module": "commonjs",                                       
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist"                              
  },

  "include": [
    "src/**/*.ts", 
    "src/db/migrations/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
